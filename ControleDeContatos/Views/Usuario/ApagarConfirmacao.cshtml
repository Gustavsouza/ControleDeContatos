@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação para apagaar o contato";
}

<input type="hidden" asp-for="id" />
<div class="text-center">
    <h3>
        Realmente deseja apagar o contato @Model.nome ?
    </h3>
</div>

<a class="btn btn-primary col-12" role="button"asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger col-12" role="button" asp-controller="Usuario" asp-action="Remover" asp-route-id="@Model.id">Confirmar exclusão</a>