@{
}
@{
    ViewData["Title"] = "Editar Contato";
}
<div class="text-center">

    <h1 class="display-5" style="text-align:center"> Editar contatos: </h1>

 </div>

 
<form asp-controller="Contato" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="id" />
  <div class="mb-3">
       @*nome*@
    <label for="name" class="form-label">Nome:  <span style="color:red; font-size:small">        @Html.ValidationMessageFor(x=> x.nome)  <span/> </label>
    <input type="text" asp-for="nome" class="form-control" id="nome" aria-describedby="nome" placeholder="">
    
    @*email*@
    <label for="email" class="form-label">Email:  <span style="color:red; font-size:small">        @Html.ValidationMessageFor(x=> x.email)  </span>  </label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="email">
     <div id="emailHelp" class="form-text">Nunca compartilharemos seu e-mail com mais ninguém.</div>
    @*telefone*@
    <label for="number" class="form-label">Celular: <span style="color:red; font-size:small">        @Html.ValidationMessageFor(x=> x.celular)  </span> </label>
        <input type="number" class="form-control" id="celular" aria-describedby="celular" asp-for="celular">
        <br />
    <button type="submit" class="btn btn-primary col-12" style="margin-bottom:0.5em">Alterar</button>

    <a asp-controller="Contato" asp-action="Index" class="btn btn-secondary col-12" role="button">Voltar</a>

  </div>
</form>