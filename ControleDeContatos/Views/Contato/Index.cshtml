<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class ="btn btn-primary" role="button" asp-controller="Contato" asp-action="criar">Adicionar novo Contato</a>
    </div>
    <br />
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Json">API GET</a>
    </div>
<br />
    @if(TempData["MensagemSucesso"]!=null){
                <div class="alert alert-success" role="alert">
                    <button type="button" class="btn btn-danger btn-sm btn-close close-alert" arial-label="Close"></button> @TempData["MensagemSucesso"] 
         </div>
} 
 @if(TempData["MensagemErro"]!=null){
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm btn-close close-alert " arial-label="Close"></button>
 @TempData["MensagemErro"]
</div>
}




<br />

 <h1 class="display-5" style="text-align:center"> Listagem de contatos: </h1>
<table class="table" id="table-contatos">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Celular</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
            @if(Model!= null && Model.Any())
            {
                foreach (ContatoModel contato in Model )
                {
                <tr>
                    <th scope="row">@contato.id</th>
                    <td>@contato.nome</td>
                    <td>@contato.email</td>
                    <td>@contato.celular</td>
                    <td>
                    <div class="btn-group" role="group">
                    <a role="button" class="btn btn-primary active" aria-current="page" asp-route-id="@contato.id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contato.id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                     </div>
                 </td>
            </tr>
                }
            }
        </tbody>
</table>
</div>
