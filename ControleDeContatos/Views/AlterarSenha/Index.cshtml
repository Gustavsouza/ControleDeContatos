@using ControleDeContatos.Enums;
@model AlterarSenhaModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewData["Title"] = "Alterar Senha Usuario";
}
<div class="text-center">

    <h1 class="display-5" style="text-align:center"> Alterar Senha do Usuario: </h1>

</div>


    @if(TempData["MensagemSucesso"]!=null){
                <div class="alert alert-success" role="alert">
                    <button type="button" class="btn btn-danger btn-sm btn-close close-alert" arial-label="Close"></button> @TempData["MensagemSucesso"] 
         </div>
} 
 @if(TempData["MensagemErro"]!=null){
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm btn-close close-alert " arial-label="Close"></button>
 @TempData["MensagemErro"]
</div>
}


<form asp-controller="AlterarSenha" asp-action="Alterar" method="post">
    <div class="mb-3">
        @*nome*@
        <div>
            <label for="SenhaAtual" class="form-label">Senha Atual </label>
            <input type="password" asp-for="SenhaAtual" class="form-control" id="nome" aria-describedby="nome" placeholder="Digite sua senha">
            <span style="color:red; font-size:small"> @Html.ValidationMessageFor(x => x.SenhaAtual) </span>
        </div>

         <div>
             <label for="NovaSenha" class="form-label">Nova senha </label>
            <input type="password" asp-for="NovaSenha" class="form-control" id="nome" aria-describedby="nome" placeholder="Digite sua nova senha">
            <span style="color:red; font-size:small"> @Html.ValidationMessageFor(x => x.NovaSenha)</span>
        </div>

        <div>
            <label for="ConfirmarNovaSenha" class="form-label">Confirme a senha </label>
            <input type="password" asp-for="ConfirmarNovaSenha" class="form-control" id="nome" aria-describedby="nome" placeholder="Digite sua nova senha novamente">
           <span style="color:red; font-size:small">  @Html.ValidationMessageFor(x => x.ConfirmarNovaSenha) </span>
        </div>



        <br />
        <button type="submit" class="btn btn-primary col-12" style="margin-bottom:0.5em">Alterar senha</button>

        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary col-12" role="button">Voltar</a>


    </div>
</form>