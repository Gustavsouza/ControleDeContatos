
@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

    @if(TempData["MensagemSucesso"]!=null){
                <div class="alert alert-success" role="alert">
                    <button type="button" class="btn btn-danger btn-sm btn-close close-alert" arial-label="Close"></button> @TempData["MensagemSucesso"] 
         </div>
} 
 @if(TempData["MensagemErro"]!=null){
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm btn-close close-alert " arial-label="Close"></button>
 @TempData["MensagemErro"]
</div>
}


<link href="~/css/LoginStyleSheet.css" rel="stylesheet">
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


<form class="form-signin" asp-controller="Login" asp-action="Entrar"  method="post">
		<h1 class="form-signin-heading text-muted">Login</h1>
	<label for="Login" >  <span style="color:red; font-size:small">        @Html.ValidationMessageFor(x=> x.Login)  <span />  </label>
			<input type="text" asp-for="Login" class="form-control" placeholder="Login" id="Login"  >
	<label for="Senha"> <span style="color:red; font-size:small">        @Html.ValidationMessageFor(x=> x.Senha)  <span /> </label>
			<input type="password" asp-for="Senha" class="form-control" placeholder="Senha" id="Senha">
			 
		<p class="mb-4 text-sm-center mx-auto">
			Esqueceu sua senha?
			<a asp-action="RedefinirSenha" asp-controller="login" class="text-primary text-gradient font-weight-bold" >Redefinir senha</a>
		</p>

		<button class="btn btn-lg btn-primary btn-block" type="submit">
			Entrar
		</button>
</form>




